package wipro.day2.TASK;

abstract class Customer {
    public abstract double calculateDiscount(double amount);
}

// Subclass for Regular Customers
class RegularCustomer extends DiscountCalculator {
    @Override
    public double calculateDiscount(double amount) {
        double discount = 0.10; // 10% discount
        return amount * discount;
    }
}

// Subclass for Premium Customers
class PremiumCustomer extends DiscountCalculator {
    @Override
    public double calculateDiscount(double amount) {
        double discount = 0.20; // 20% discount
        return amount * discount;
    }
}

// Subclass for Employees
class Employee extends DiscountCalculator {
    @Override
    public double calculateDiscount(double amount) {
        double discount = 0.30; // 30% discount
        return amount * discount;
    }
}

// Function to calculate discount based on customer type
public class DiscountCalculator {
    public static double applyDiscount(DiscountCalculator customer, double amount) {
        double discount = customer.calculateDiscount(amount);
        return amount - discount;
    }

    public static void main(String[] args) {
        // Create instances of different customer types
        DiscountCalculator regularCustomer = new RegularCustomer();
        DiscountCalculator premiumCustomer = new PremiumCustomer();
        DiscountCalculator employee = new Employee();

        // Amount to apply discount on
        double amount = 100.0;

        // Calculate discounts
        System.out.printf("Regular Customer Discounted Price: %.2f%n", applyDiscount(regularCustomer, amount));
        System.out.printf("Premium Customer Discounted Price: %.2f%n", applyDiscount(premiumCustomer, amount));
        System.out.printf("Employee Discounted Price: %.2f%n", applyDiscount(employee, amount));
    }
}
